{
  "name": "grpc-event-store",
  "version": "0.0.11",
  "description": "An Event Store with a gRPC interface",
  "main": "lib/index.js",
  "scripts": {
    "clean": "./commands/clean.sh",
    "sql": "./commands/sql.sh",
    "dev:unit:tests": "./commands/dev:unit:tests.sh",
    "dev:cockroach:backend:tests": "./commands/dev:cockroach:backend:tests.sh",
    "dev:integration:tests": "./commands/dev:integration:tests.sh",
    "transpile": "npm run transpile:package && npm run transpile:tests",
    "transpile:package": "./commands/transpile:package.sh",
    "transpile:tests": "./commands/transpile:tests.sh",
    "unit:tests": "./commands/unit:tests.sh",
    "cockroach:backend:tests": "./commands/cockroach:backend:tests.sh",
    "integration:tests": "./commands/integration:tests.sh",
    "test": "./commands/run:all:tests.sh",
    "prepublish": "npm test"
  },
  "betterScripts": {
    "unit:tests": {
      "command": "mocha tests/unit",
      "env": {
        "CODE_PATH": "lib"
      }
    },
    "unit:tests:live": {
      "command": "mocha --compilers js:babel-register -b -w tests-src/unit",
      "env": {
        "CODE_PATH": "src"
      }
    },
    "cockroach:backend:tests": {
      "command": "mocha tests/cockroachBackend.js",
      "env": {
        "CODE_PATH": "lib"
      }
    },
    "cockroach:backend:tests:live": {
      "command": "mocha --compilers js:babel-register -b -w tests-src/cockroachBackend.js",
      "env": {
        "CODE_PATH": "src"
      }
    },
    "integration:tests": {
      "command": "mocha tests/integration.js",
      "env": {
        "CODE_PATH": "lib"
      }
    },
    "integration:tests:live": {
      "command": "mocha --compilers js:babel-register -b -w tests-src/integration.js",
      "env": {
        "CODE_PATH": "src"
      }
    },
    "start:testnode": {
      "command": "babel-node tests-src/testNode.js"
    },
    "transpile:package": {
      "command": "rm -rf lib/* && babel src -D -d lib"
    },
    "transpile:tests": {
      "command": "rm -rf tests/* && babel tests-src -D -d tests"
    }
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "debug": "^2.2.0",
    "dnsmq-messagebus": "0.0.3",
    "eventemitter3": "^2.0.0",
    "grpc": "^1.0.0",
    "lodash": "^4.16.1",
    "pg": "^6.1.0",
    "rxjs": "5.0.0-beta.12",
    "shortid": "^2.2.6"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "better-npm-run": "0.0.13",
    "immutable": "^3.8.1",
    "mocha": "^3.0.2",
    "should": "^11.1.0",
    "sinon": "^1.17.6"
  },
  "keywords": [
    "gRPC",
    "event sourcing"
  ],
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "data",
      "testData",
      "InMemorySimulation",
      "AGGREGATE_TYPES",
      "EVENT_TYPES",
      "FixtureBusNode"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gtriggiano/grpc-event-store.git"
  },
  "author": "Giacomo Triggiano <giacomotriggiano@gmail.com>",
  "license": "MIT"
}
