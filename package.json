{
  "name": "grpc-event-store",
  "version": "0.0.3",
  "description": "An Event Store with a gRPC interface",
  "main": "lib/index.js",
  "scripts": {
    "stop": "docker-compose stop",
    "rm": "docker-compose rm -f",
    "clean": "npm run stop && npm run rm",

    "dev:unit:tests": "npm run clean && docker-compose run development better-npm-run unit:tests:live",
    "dev:cockroach:backend:tests": "npm run clean && docker-compose up -d cockroach && sleep 4 && docker-compose run development better-npm-run cockroach:backend:tests:live",

    "transpile:package": "docker-compose run development better-npm-run transpile:package",
    "transpile:tests": "docker-compose run development better-npm-run transpile:tests",
    "unit:tests": "docker-compose run development better-npm-run unit:tests",
    "cockroach:backend:tests": "docker-compose run development better-npm-run cockroach:backend:tests",
    "test": "./runTestSuite.sh"
  },
  "betterScripts": {
    "unit:tests": {
      "command": "mocha tests/unit",
      "env": {
        "CODE_PATH": "lib"
      }
    },
    "unit:tests:live": {
      "command": "mocha --compilers js:babel-register -b -w tests-src/unit",
      "env": {
        "CODE_PATH": "src"
      }
    },
    "cockroach:backend:tests": {
      "command": "mocha tests/cockroachBackend.js",
      "env": {
        "CODE_PATH": "lib"
      }
    },
    "cockroach:backend:tests:live": {
      "command": "mocha --compilers js:babel-register -b -w tests-src/cockroachBackend.js",
      "env": {
        "CODE_PATH": "src"
      }
    },
    "transpile:package": {
      "command": "rm -rf lib/* && babel src -D -d lib"
    },
    "transpile:tests": {
      "command": "rm -rf tests/* && babel tests-src -D -d tests"
    }
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "debug": "^2.2.0",
    "dnsmq-messagebus": "0.0.3",
    "eventemitter3": "^2.0.0",
    "grpc": "^1.0.0",
    "lodash": "^4.16.1",
    "pg": "^6.1.0",
    "rxjs": "5.0.0-beta.12",
    "shortid": "^2.2.6"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-es2015": "^6.14.0",
    "better-npm-run": "0.0.13",
    "immutable": "^3.8.1",
    "mocha": "^3.0.2",
    "should": "^11.1.0",
    "sinon": "^1.17.6"
  },
  "keywords": [
    "gRPC",
    "event sourcing"
  ],
  "standard": {
    "globals": [
      "describe",
      "it",
      "before",
      "beforeEach",
      "after",
      "afterEach",
      "data",
      "testData"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gtriggiano/grpc-event-store.git"
  },
  "author": "Giacomo Triggiano <giacomotriggiano@gmail.com>",
  "license": "MIT"
}
